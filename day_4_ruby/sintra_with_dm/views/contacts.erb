<h1>All Contacts</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Message</th>
      <th></th>
    </tr>
  </thead>

  <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.first_name %></td>
      <td><%= contact.last_name %></td>
      <td><%= contact.email %></td>
      <td><%= contact.message %></td>
      <td><a href="/contact_details/<%= contact.id %>">View Contact</a></td>
    </tr>
  <% end %>
</table>
